<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.askey.dvr.cdr7010.setting.module.system.ui.leveler.SpiritView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_00ffffff"
        android:id="@+id/show"/>

    <TextView
        android:id="@+id/leveler_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/view_pading_left"
        android:paddingRight="@dimen/view_pading_left"
        android:paddingTop="@dimen/view_pading_top"
        android:paddingBottom="@dimen/view_pading_top"
        android:layout_marginTop="@dimen/leveler_detail_title_margin_top"
        android:background="@color/text_color"
        android:text="@string/leveler_detail_title"
        android:textColor="@color/white"
        android:textSize="@dimen/time_size" />

    <include
        layout="@layout/right_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

    <include
        layout="@layout/bottom_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>