<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gps_status_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_main"
    android:layout_weight="1">

    <include layout="@layout/title_layout" />


    <com.askey.dvr.cdr7010.setting.view.HorizontalListView
        android:id="@+id/horizon_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_gps_all"
        android:layout_margin="@dimen/title_margin_top"
        >
    </com.askey.dvr.cdr7010.setting.view.HorizontalListView>

    <include
        layout="@layout/right_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

    <include
        layout="@layout/bottom_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <com.askey.dvr.cdr7010.setting.widget.MarqueeTextView
        android:id="@+id/marquee_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_blue_light"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@drawable/bg_menu_main_description"
        />


</RelativeLayout>