<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/gps_status_padding_top"
    android:paddingBottom="@dimen/gps_status_padding_top"
    android:paddingLeft="@dimen/gps_status_padding_left"
    android:paddingRight="@dimen/gps_status_padding_left"
    android:layout_weight="0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gps_signal_strength"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_weight="0.1"
        android:layout_marginTop="@dimen/view_margin_top"
        android:textColor="@color/white"
        android:background="@color/color_ffff33"
        android:text="" />

    <TextView
        android:id="@+id/gps_satellite_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_marginTop="@dimen/view_margin_top"
        android:textColor="@color/white"
        android:text="TextView" />

    <TextView
        android:id="@+id/gps_signal_strength_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_marginTop="@dimen/view_margin_top"
        android:textColor="@color/white"
        android:text="TextView" />

</LinearLayout>
